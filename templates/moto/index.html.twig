{% extends 'base.html.twig' %}

{% block title %}Moto index{% endblock %}

{% block body %}
    <h1>Moto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Annee</th>
                <th>Couleur</th>
                <th>PrixJour</th>
                <th>Dispo</th>
                <th>NombreNotes</th>
                <th>MoyenneNotes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for moto in motos %}
            <tr>
                <td>{{ moto.id }}</td>
                <td>{{ moto.annee }}</td>
                <td>{{ moto.couleur }}</td>
                <td>{{ moto.prixJour }}</td>
                <td>{{ moto.dispo ? 'Yes' : 'No' }}</td>
                <td>{{ moto.nombreNotes }}</td>
                <td>{{ moto.moyenneNotes }}</td>
                <td>
                    <a href="{{ path('app_moto_show', {'id': moto.id}) }}">show</a>
                    <a href="{{ path('app_moto_edit', {'id': moto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_moto_new') }}">Create new</a>
{% endblock %}
